<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPokemonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pokemon Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textViewPokemonWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso:"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewPokemonHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Altura:"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewPokemonTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipos:"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonDeletePokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Eliminar PokÃ©mon"
             />
    </LinearLayout>
</ScrollView>